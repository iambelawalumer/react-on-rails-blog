<div class="container m-b-15">
  <div class="row">
    <%= form_for(post) do |f| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <!-- <h2><%= pluralize(post.errors.count, "error") %>
          prohibited this post from being saved:</h2> -->
        <% post.errors.full_messages.each do |message| %>
          <div class="alert alert-danger"><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field(:title, {:class => 'form-control col-md-12'}) %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area(:body, {:class => 'form-control col-md-12', :rows => '8'}) %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, options_for_select(['Beauty','Travel','Health','Music','Sport','Design'], :selected => f.object.category) %>

    </div>

    <% if @post.image? %>
        <p>
            <%= image_tag @post.image ,:style => "width:auto"%>
        </p>
    <% end %>
    <div class="form-group m-t-20">
      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>

    <%= f.submit ({:class => 'btn btn-outline-primary'}) %>
  <% end %>
</div>
</div>
